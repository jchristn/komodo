<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Version>1.4.1.2</Version>
    <Authors>Joel Christner</Authors>
    <Company>Joel Christner</Company>
    <Product>Komodo Server: Information search, storage, and retrieval</Product>
    <Description>Komodo is an information search, storage, and retrieval platform.</Description>
    <Copyright>(c)2020 Joel Christner</Copyright>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/jchristn/komodo</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/jchristn/komodo/master/Assets/komodo-icon.ico</PackageIconUrl>
    <RepositoryUrl>https://github.com/jchristn/komodo</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>komodo information search storage retrieval rest restful api blob object</PackageTags>
    <PackageReleaseNotes>Logo in setup</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DatabaseWrapper" Version="2.0.2" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="RestWrapper" Version="2.1.4.1" />
    <PackageReference Include="SyslogLogging" Version="1.3.2" />
    <PackageReference Include="Watson" Version="3.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Komodo.Classes\Komodo.Classes.csproj" />
    <ProjectReference Include="..\Komodo.Crawler\Komodo.Crawler.csproj" />
    <ProjectReference Include="..\Komodo.Database\Komodo.Database.csproj" />
    <ProjectReference Include="..\Komodo.IndexClient\Komodo.IndexClient.csproj" />
    <ProjectReference Include="..\Komodo.IndexManager\Komodo.IndexManager.csproj" />
    <ProjectReference Include="..\Komodo.Parser\Komodo.Parser.csproj" />
    <ProjectReference Include="..\Komodo.Postings\Komodo.Postings.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\favicon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
